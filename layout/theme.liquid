<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
  <head>
    <script>
      document.documentElement.classList.remove('no-js');
      document.documentElement.classList.add('js');
      if (Shopify.designMode) {
        document.documentElement.classList.add('shopify-design-mode');
      }
    </script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="canonical" href="{{ canonical_url }}">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="theme-color" content="{{ settings.color_primary }}">
    <link rel="preconnect" href="//cdn.shopify.com" crossorigin>

    <!-- Favicon -->
    {% comment %} {%- render 'favicon' -%} {% endcomment %}

    <!-- Title -->
    <title>
      {%- liquid
        if template.name == 'gift_card'
          assign formatted_initial_value = gift_card.initial_value | money_without_trailing_zeros | strip_html
          echo 'gift_cards.issued.title' | t: value: formatted_initial_value, shop: shop.name
        elsif template.name == 'password'
          echo shop.name
        else
          echo page_title
          if current_tags
            assign current_tags_joined = current_tags | join: ', '
            echo ' &ndash; '
            echo 'general.title.tags' | t: tags: current_tags_joined
          endif
          if current_page != 1
            echo ' &ndash; '
            echo 'general.title.page' | t: page: current_page
          endif
          unless page_title contains shop.name
            echo ' &ndash; '
            echo shop.name
          endunless
        endif
      -%}
    </title>

    <!-- Meta Desc -->
    {%- if template.name == 'gift_card' -%}
      <meta name="description" content="{{ 'gift_cards.issued.subtext' | t }}">
    {% elsif page_description %}
      <meta name="description" content="{{ page_description | escape }}">
      {%- render 'social-meta-tags' -%}
    {%- endif -%}

    <!-- Shopify Header Hooks -->
    {{ content_for_header }}

    <!-- Critical CSS -->
    {%- style -%}
      {%- render 'critical.css' -%}
    {%- endstyle -%}

    <!-- Common/Main css file -->
    {%- render 'stylesheet', name: 'common' -%}

    <!-- Common/Main js file -->
    {%- render 'script', name: 'common' -%}
  </head>
  <body
    id="{{ page_title | handle }}"
    class="{% if customer %}customer-logged-in {% endif %}template-{{ request.page_type | handle }} template-{{ template.name }}"
  >
    <a class="skip-to-content-link button visually-hidden" href="#MainContent">
      {{- 'accessibility.skip_to_text' | t -}}
    </a>

    {%- section 'header' -%}
    {%- render 'breadcrumbs' -%}
    <component-loader>
      <main class="main-content" role="main" id="MainContent">
        {{ content_for_layout }}
      </main>

      {%- section 'footer' -%}

      {%- section 'ajax-cart' -%}
      {%- section 'klaviyo-backinstock' -%}
    </component-loader>

    <!-- Cart JSON -->
    <script type="application/json" data-ajax-cart-initial-state>
      {{ cart | json }}
    </script>
    <script type="application/json" data-ajax-cart-configuration>
      {
        "requestErrorText": "{{ 'sections.cart.cart_error' | t }}",
        "lineItemQuantityErrorText": "{{ 'sections.cart.cart_quantity_error' | t }}"
      }
    </script>

    {%- render 'component-loader' -%}

    <script>
      window.routes = {
        predictive_search_url: '{{ routes.predictive_search_url }}',
      };

      window.variantStrings = {
        addToCart: `{{ 'products.product.add_to_cart' | t }}`,
        soldOut: `{{ 'products.product.sold_out' | t }}`,
        unavailable: `{{ 'products.product.unavailable' | t }}`,
      };
    </script>

    {%- if settings.klaviyo_id != blank -%}
      {% comment %}theme-check-disable{% endcomment %}
      <script
        async
        type="text/javascript"
        src="//static.klaviyo.com/onsite/js/klaviyo.js?company_id={{ settings.klaviyo_id }}"
      ></script>
      <script>
        var _learnq = _learnq || [];
        if ('{{ customer.email }}') {
          _learnq.push([
            'identify',
            {
              $email: '{{ customer.email }}',
            },
          ]);
        }
      </script>
      {% comment %}theme-check-enable{% endcomment %}
    {%- endif -%}

    {%- if template contains 'product' -%}
      <!-- Product Structured Data -->
      {% render 'product-structured-data' %}
      <!-- Klaviyo Product Tracker code -->
      {% render 'klaviyo-product-tracker' %}
    {%- endif -%}
  </body>
</html>
