{% comment %}
  The object should be full {{ product | json }} or only needed properties of that object
{% endcomment %}
{%- liquid 
  unless section_id
    assign section_id = section.id
  endunless

  unless variant_id
    assign variant_id = 0
  endunless

  if update_url
    assign update_url = 'true'
  else
    assign update_url = 'false'
  endif
-%}
<script type="application/json" data-product-section-json>
  { 
    "product": {
      "options": {{ product.options | json }},
      "variants": [
        {%- for variant in product.variants -%}
          {
            "id": {{ variant.id }},
            "available": {{ variant.available }},
            "options": {{ variant.options | json }}
          }
          {%- unless forloop.last -%}, {%- endunless -%}
        {%- endfor -%}
      ]
    },
    "section": {
      "sectionId": "{{ section_id }}",
      "requestURL": "{{ product.url | within: collection }}",
      "variantId": {{ variant_id }},
      "updateURL": {{ update_url }}
    }
  }
</script>
