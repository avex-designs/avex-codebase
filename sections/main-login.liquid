{%- render 'stylesheet', name: 'login' -%}
{% comment %} {%- render 'script', name: 'login' -%} {% endcomment %}

<login-component>
SOME COMP
</login-component>

<div class="main-login">
  <div class="main-login__recover">
    {%- form 'recover_customer_password', class: 'form form--recovery' -%}
      {% assign recover_success = form.posted_successfully? %}
      {%- comment -%}
        Redirection after form submission:
        <input type="hidden" name="return_to" value="{{ routes.account_login_url }}#recover">
      {%- endcomment -%}
      <div class="form__field">
        <input
          type="email"
          value=""
          name="email"
          id="RecoverEmail"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="RecoverEmail-email-error"
            autofocus
          {% endif %}
          placeholder="{{ 'customer.login_page.email' | t }}"
        >
        <label for="RecoverEmail">
          {{ 'customer.login_page.email' | t }}
        </label>
      </div>
      {%- if form.errors -%}
        <small id="RecoverEmail-email-error" class="form__errors">
          {{ form.errors.messages.form }}
        </small>
      {%- endif -%}

      <button class="form__submit">
        {{ 'customer.login_page.submit' | t }}
      </button>

      <a href="#login" class="form__cancel">
        {{ 'customer.login_page.cancel' | t }}
      </a>
    {%- endform -%}
  </div>

  <div class="main-login__main">
    {%- if recover_success == true -%}
      {{ 'customer.recover_password.success' | t }}
    {%- endif -%}
    {%- form 'customer_login', class: 'form', novalidate: 'novalidate' -%}
      {%- if form.errors -%}
        {{ form.errors | default_errors }}
      {%- endif -%}

      <div class="form__field">
        <input
          type="email"
          name="customer[email]"
          id="CustomerEmail"
          autocomplete="email"
          autocorrect="off"
          autocapitalize="off"
          {% if form.errors contains 'form' %}
            aria-invalid="true"
          {% endif %}
          placeholder="{{ 'customer.login_page.email' | t }}"
        >
        <label for="CustomerEmail">
          {{ 'customer.login_page.email' | t }}
        </label>
      </div>

      {%- if form.password_needed -%}
        <div class="field">
          <input
            type="password"
            value=""
            name="customer[password]"
            id="CustomerPassword"
            autocomplete="current-password"
            {% if form.errors contains 'form' %}
              aria-invalid="true"
            {% endif %}
            placeholder="{{ 'customer.login_page.password' | t }}"
          >
          <label for="CustomerPassword">
            {{ 'customer.login_page.password' | t }}
          </label>
        </div>

        <a href="#recover">
          {{ 'customer.login_page.forgot_password' | t }}
        </a>
      {%- endif -%}

      <button>
        {{ 'customer.login_page.sign_in' | t }}
      </button>

      <a href="{{ routes.account_register_url }}">
        {{ 'customer.login_page.create_account' | t }}
      </a>
    {%- endform -%}
  </div>

  {%- if shop.checkout.guest_login -%}
    <div class="main-login__guest">
      {%- form 'guest_login' -%}
        <button>
          {{ 'customer.login_page.guest_continue' | t }}
        </button>
      {%- endform -%}
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Main Login",
  "settings": []
}
{% endschema %}
